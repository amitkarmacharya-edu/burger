<main>
  <section class="row burger-section">
    <h5 class="text-center col-12 text-info m-2">Click and Drag the burger to devour</h5>
    {{!-- Devour --}}
    <div class="col-md-6">
      <h4 class="text-center text-white p-3 rounded bg-danger">Devour Burger</h4>
      <form class="form-inline ml-auto p-3">
        <input class="form-control mr-sm-2" type="search" placeholder="enter burger name" id="burger-input" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" id="create-btn" type="button">Create</button>
      </form>
      <div class="border p-2 draggable rounded text-center drop devour">
        {{#each burgers}}
        {{#unless devoured}}
        <div class="p-3 m-1 d-flex border burger-card rounded justify-content-between border">
          <span id={{id}}>{{burger_name}}</span>
        </div>
        {{/unless}}
        {{/each}}
      </div>
    </div>

    {{!-- Devour --}}
    <div class="col-md-6 mt-2 ">
      <h4 class="text-center text-white p-3 droppable rounded bg-danger">Devour Burger</h4>
      <div class="border p-2 rounded droppable text-center drop devour">
        {{#each burgers}}
        {{#if devoured}}
        <div class="p-3 m-1 d-flex border burger-card rounded justify-content-between border">
          <span>{{burger_name}}</span>
        </div>
        {{/if}}
        {{/each}}
      </div>
    </div>
  </section>
</main>